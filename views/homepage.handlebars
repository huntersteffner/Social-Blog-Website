    <section id="login" class="container d-flex justify-content-around mb-2">
        <div class="d-flex justify-content-around">

            <div id="existing-user" class="card">
                <h3>Login</h3>
                <form>
                    <div class="form-group">
                        <label for="login-username">Username: </label>
                        <input type="text" class="form-control" name="login-username" id="login-username">
                    </div>
                    <div class="form-group">
                        <label for="login-password">Password: </label>
                        <input type="password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Login</button>
                </form>
            </div>
            <div id="new-user" class="card">
                <h3>Register</h3>
                <form>
                    <div class="form-group">
                        <label for="register-username">Username: </label>
                        <input type="text" class="form-control" name="register-username">
                    </div>
                    <div class="form-group">
                        <label for="register-password">Password: </label>
                        <input type="password" class="form-control" name="register-password">
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Register</button>
                </form>
            </div>
        </div>
    </section>

