 <section id="write-post">
        <div class="container">
            <div class="card">
                <div class="card-header banner">Create New Post</div>
                <form id="post-form" class="post-menu">
                    <div class="form-group">
                        <label for="title">Title of Post: </label>
                        <input type="text" class="form-control" name="title" id="post_name">
                    </div>
                    <div class="form-group">
                        <label for="content">Content: </label>
                        <textarea class="form-control" id="post_description" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Post</button>
                </form>
            </div>
        </div>
    </section>
    <script src="./js/writepost.js"></script>